     <tr>
      <td colspan="4">&nbsp;</td>
      <td style="text-align: right;"><input type="submit" value="$_("Delete")"/></td>
      <td>
       <input class="checkbox" type="checkbox" id="allbox" />
      </td>
     </tr>
    </tfoot>
#end if
</table>
