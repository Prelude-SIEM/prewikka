            #if $prewikka.user.has(User.PERM_IDMEF_ALTER)
              <input class="checkbox" type="checkbox" name="delete" value="$message.delete"/>
            #else
              &nbsp;
            #end if
          </td>
        </tr>
        #set $cnt += 1
      #end for
    </tbody>

#if $prewikka.user.has(User.PERM_IDMEF_ALTER) and $cnt
