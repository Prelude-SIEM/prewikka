#from prewikka import localization
#extends prewikka.templates.TopLayout

#block toplayout_content
#filter CleanOutput

#silent localization.setLocale(localization._DEFAULT_LANGUAGE)

<div id="fieldset_page" style="position: absolute; top: 25%; left: 50%; width: 330px; margin-left: -165px;">
<fieldset>
  <legend>$_("User authentication")</legend>
  <table>
    <form action="?" method="post">
      #for $name, $value in $arguments
        #if type($value) is list
          #for $val in $value
            <input type="hidden" name="$name" value="$val"/>
          #end for
        #else
          <input type="hidden" name="$name" value="$value"/>
        #end if
      #end for
      <tr>
        <th>$_("Login:")</th>
        <td><input type="text" name="_login"/></td>
      </tr>
      <tr>
        <th>$_("Password:")</th>
        <td><input type="password" name="_password"/></td>
      </tr>
     </table>

     <input style="float: right;" type="submit" value="$_("Submit")"/>
     <span class="authentication_error">$_($message)</span>
    </form>
 </fieldset>
</div>

#end filter
#end block toplayout_content
